@page
@model GaneShop.Pages.Auth.LoginModel
@{
}

<style>
        /* Stil pentru butonul de logare cu culoare verde */
        .btn-login {
            background-color: #28a745; /* Culoarea verde (poti ajusta codul culorii dupa preferinte) */
            color: #fff; /* Culoarea textului */
            border-color: #28a745; /* Culoarea marginii butonului */
        }

        /* La hover, schimbăm puțin culoarea */
        .btn-login:hover {
            background-color: #218838; /* O nuanță mai închisă la hover */
            border-color: #1e7e34; /* O nuanță mai închisă a marginii la hover */
        }
    </style>



<div class="card mx-auto" style="width:400px;">
    <div class="card-body">
        <h2 class="text-center mb-5">GaneShop 🫵🏻 </h2>
       <p class="text-center mb-2">
           <strong>Cel mai bun accesoriu de modă al unei femei este un bărbat frumos. – Coco Chanel</strong>
           </p>

@if(Model.MesajEronat.Length>0)
{

 <div class= 'alert  alert-warning alert-dismissible fade show' role='alert'>
<strong>@Model.MesajEronat</strong>
<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'> </button>
</div>

}
else if(Model.MesajValidare.Length>0)
{

<div class= 'alert  alert-success alert-dismissible fade show' role='alert'>
<strong>@Model.MesajValidare</strong>
<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'> </button>
</div>

}


<form method="post">
    <div class="mb-3">
        <label class="form-label">Introducere Email</label>
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


     <div class="mb-3">
        <label class="form-label">Introducere Parola</label>
        <input class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

       <div class="row mb-3">
        <div class="col d-grid"> 
            <button type="submit" class="btn btn-login">Logare</button>
        </div>
        <div class="col d-grid">
            <a class=" btn btn-login" href="/" role="button">Inchidere</a>
        </div>
    </div>

    <a class="btn btn-link" href="/Auth/ForgotPassword" role="button"></a>
</form>

    </div>
</div>